#include <stdio.h>

/* define simple structure */
struct Status
{
  unsigned int Set1 : 3;
  unsigned int      : 4;
  unsigned int Set2 : 3;
}Current;

int main()
{
	Current.Set1 = 15;
    return 0;
}
